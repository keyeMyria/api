{% extends "core_base.jinja" %}

{% block title %}{% endblock %}

{% block head %}
{{super()}}
{# <script defer src="{{ static("s.js") }}"></script> #}
{% endblock %}


{% block css %}
{{super()}}
{% if corecss %}<link rel="stylesheet" property="stylesheet" href="{{ static("css/core.css") }}?v=2">{% endif %}
{% endblock %}


{% block prebody %}
{% if user.is_superuser %}
<div id="bodyupload" class="hide noprint" style="position:fixed; background-color: rgba(0,0,0,0.4); width:100%;height:100%;z-index:1000;padding:4rem;box-sizing:border-box;">
  <div style="border:10px dashed #ddd; font-size:4rem;color:#ddd;padding:2rem;border-radius:1rem;box-sizing:border-box;position:fixed;bottom:2rem;right:2rem;left:2rem;top:4rem;text-align:center">Загрузить файлы</div>
</div>
{% endif %}
{% endblock %}


{% block header %}
{% if self.adminmenu() and user.is_superuser and False %}
  <div class="w">
	{% block adminmenu %}
	  {# <a href="{{url("adm:index")}}">Админка</a> #}
	  {# <a href="{{url("adm:pip")}}">pip</a> #}
	{% endblock %}
  </div>
{% endif %}
<div class="" style="background-color:#fafafb;overflow:visible;box-shadow: 0 1px 0 rgba(12,13,14,0.15);z-index:2;height:50px">
  <div class="w" style="overflow:visible;">
	<div class="flex" style="">
	  {% if menu %}
	  <div class="" style="line-height:35px;overflow:hidden;">
		<nav style="white-space:nowrap;">
		  {% set parent = menu["parent"] %}

		  <span class="{# hide-if-more-800 #}">

		  </span>

		  {% spaceless %}
			{# <a id="site_switch" href="{{url("index", host=host.name)}}"><i class="icon icon-menu">&#61641;</i></a> #}
			{# <div id="site_switch_menu" class="hide popup w"> #}
			{#   {\# Add some superuser menu items: #\} #}
			{#   {% if user.is_superuser %} #}
			{# 	<a class="padlr" href="{{url("index", host=host.name)}}">Main page</a> #}
			{# 	<a class="padlr" href="{{url("admin:index", host=host.name)}}">Django admin</a> #}
			{# 	<a class="padlr" href="{{url("core:files:index", host=host.name)}}">Files</a> #}
			{# 	<a class="padlr" href="{{url("core:celery", host=host.name)}}">Celery</a> #}
			{# 	<a class="padlr" href="{{url("core:nginx", host=host.name)}}">Nginx</a> #}
			{# 	<a class="padlr" href="{{url("core:updates", host=host.name)}}">Updates</a> #}
			{#   {% endif %} #}
			{#   <a id="exit" class="padlr" href="{{url("core:logout")}}">Выход</a> #}
			{# </div> #}
			{% for k, v in menu.items() %}
			  {% if v %}
				<a class="{% if k == menu.current %}current{% endif %}" href="{{v.url}}"
				   {% if v.hint %}title="{{v.hint}}"{% endif %}
				   >
				  {# {% if loop.index==1 %}<i class="icon icon-menu">&#61641; </i>{% endif %} #}
				  {% if v.img %}
					<img alt="" src="{{v.img}}" style="max-width:30px;max-height:30px;"/>
				  {% endif %}
				  {{v.title}}
				</a>
			  {% endif %}
			{% endfor %}
		  {% endspaceless %}

		  {# {{menu}} #}
		  {# {{menu.width}} #}

		  {# {% if current %} #}
		  {# 	<a class="" href="{{current.url}}">{{current.title}}</a> #}
		  {# {% else %} #}
		  {# 	no #}
		  {# {% endif %} #}
		</nav>
		{# {% block topleft %}<nav>{% block nav1 %}{% endblock %}</nav>{% endblock %} #}
	  </div>
	  {% endif %}
	  <div style="text-align:right;position:relative;height:100%;overflow:visible;padding-right:.3em;line-height:34px">
		<nav>
		  <a id="profile" class="ib padlr-sm" href="" style="text-decoration:none;height:50px;">
			<img class="hpad2 ib" alt="" src="{% if user.gravatar %}{{ user.gravatar(30) }}{% endif %}" style="border:0px solid #ccc; width:30px;border-radius:2px"/>
			<span class="ib" style="width: 0; height: 0; border:4px solid transparent; border-top-color: #000;"></span>
		  </a>
		</nav>
		<div id="loginbox" class="hide popup">
		  {% if user.is_authenticated and not user.is_lazy %}
			{# Add some superuser menu items: #}
			{% if user.is_superuser %}
			  <a class="padlr" href="{{url("index", host=host.name)}}">Main page</a>
			  <a class="padlr" href="{{url("admin:index", host=host.name)}}">Django admin</a>
			  <a class="padlr" href="{{url("core:files:index", host=host.name)}}">Files</a>
			  <a class="padlr" href="{{url("core:celery", host=host.name)}}">Celery</a>
			  <a class="padlr" href="{{url("core:nginx", host=host.name)}}">Nginx</a>
			  <a class="padlr" href="{{url("core:updates", host=host.name)}}">Updates</a>
			{% endif %}

			<a id="exit" class="padlr" href="{{url("core:logout", host=host.name)}}">Выход</a>
		  {% else %} {# user is not authenticated or is lazy #}
			{% if user.is_lazy %}
			  <p class="padlr">Временный аккаунт</p>
			{% endif %}
			<a class="padlr" href="{{url("core:login", host=host.name)}}?next={{request.get_full_path()}}">Войти</a>
		  {% endif %}
		</div>
	  </div>
	</div>
  </div>
</div>

{% if self.header2() %}
  <div class="pa" style="overflow:visible;border-bottom: 1px solid rgba(0,0,0,0.075);">
  	<div class="w" style="overflow:visible">
  	  <div class="pad-sm">
		{% block header2 %}{% endblock %}
  	  </div>
  	</div>
  </div>
{% endif %}
{% endblock %}


{% block main %}
{% block maintop %}{% endblock %}
<div class="w flex" style="height:100%;">
  {% if self.left() %}
	<aside class="l hide padtb lside padl noprint" style="width:200px;flex-grow:0;position:relative;">{% block left %}{% endblock %}</aside>
  {% endif %}

  {% if self.content() %}
	<div style="position:relative;padding-top:0px">
	  <div>
		{% if self.breadcrumb() %}
		  <div class="pad-sm" style="border-bottom:0px solid #ddd">
			{% block breadcrumb %}{% endblock %}
		  </div>
		{% endif %}
		{% block content %}{% endblock %}
	  </div>
	</div>
  {% endif %}
  {% if self.right() %}
	<aside class="pad noprint" style="flex:0 0 250px;position:relative;">{% block right %}{% endblock %}</aside>
  {% endif %}
</div>
{% endblock %}
